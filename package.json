		"@sveltekit-i18n/base": "^1.3.3",
		"@sveltekit-i18n/parser-default": "^1.0.6",
		"@testing-library/jest-dom": "^5.16.5",
		"@types/accept-language-parser": "^1.5.3",
		"@types/cookie": "^0.5.1",
		"@types/jest": "^29.5.3",
		"@types/node": "^18.16.3",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.14",
		"babel-jest": "^29.6.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.44.0",
