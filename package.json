	"license": "MIT",
	"description": "A Svelte portfolio application with a Strapi backend",
	"author": {
		"name": "MickaÃ«l Depardon",
		"email": "contact@mickael-depardon.fr",
		"url": "https://mickael-depardon.fr"
	},
	"engines": {
		"node": "16",
		"pnpm": "7"
	},
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"lint": "pnpm eslint && pnpm prettier && pnpm stylelint && pnpm check",
		"format": "prettier --ignore-path .prettierignore --write --plugin-search-dir=. .",
		"preeslint": "svelte-kit sync",
		"eslint": "eslint --ignore-path .eslintignore .",
		"preprettier": "svelte-kit sync",
		"prettier": "prettier --ignore-path .prettierignore --check --plugin-search-dir=. './**/*.{cjs,js,ts,scss,css,yml,svelte,html,json}'",
		"prestylelint": "svelte-kit sync",
		"stylelint": "stylelint 'src/**/*.{css,scss,svelte}'",
		"precheck": "svelte-kit sync",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"generate": "graphql-codegen && pnpm format",
		"pretest": "svelte-kit sync",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src --config jest.config.json",
		"test:watch": "pnpm test -- --watch",
		"release": "release-it"
	},
	"devDependencies": {
