		"@types/cookie": "^0.5.1",
		"@types/jest": "^29.2.2",
		"@types/node": "^16.18.3",
		"@typescript-eslint/eslint-plugin": "^5.42.1",
		"@typescript-eslint/parser": "^5.42.1",
		"babel-jest": "^29.3.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"jest": "^29.3.1",
