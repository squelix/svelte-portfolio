{
	"name": "svelte-portfolio",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"lint": "npm run eslint && npm run prettier && npm run stylelint && npm run check",
		"format": "prettier --ignore-path .prettierignore --write --plugin-search-dir=. .",
		"eslint": "eslint --ignore-path .eslintignore .",
		"prettier": "prettier --ignore-path .prettierignore --check --plugin-search-dir=. './**/*.{cjs,js,ts,scss,css,yml,svelte,html,json}'",
		"stylelint": "stylelint 'src/**/*.{css,scss,svelte}'",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"generate": "graphql-codegen",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src --config jest.config.json",
		"test:watch": "npm run test -- --watch"
	},
	"devDependencies": {
		"@babel/core": "^7.19.0",
		"@babel/preset-env": "^7.19.0",
		"@graphql-codegen/cli": "^2.12.0",
		"@graphql-codegen/typescript-operations": "^2.5.3",
		"@sveltejs/adapter-vercel": "1.0.0-next.74",
		"@sveltejs/kit": "1.0.0-next.481",
		"@testing-library/jest-dom": "^5.16.5",
		"@types/cookie": "^0.5.1",
		"@types/jest": "^29.0.0",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"babel-jest": "^29.0.3",
		"cross-env": "^7.0.3",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"jest": "^29.0.3",
		"jest-environment-jsdom": "^29.0.3",
		"jest-transform-stub": "^2.0.0",
		"postcss": "^8.4.16",
		"postcss-html": "^1.5.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"sass": "^1.54.9",
		"stylelint": "^14.11.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-recommended-scss": "^7.0.0",
		"stylelint-config-standard": "^28.0.0",
		"stylelint-scss": "^4.3.0",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.0",
		"svelte-jester": "^2.3.2",
		"svelte-preprocess": "^4.10.7",
		"sveltekit-i18n": "^2.2.2",
		"ts-jest": "^29.0.0",
		"tslib": "^2.3.1",
		"typescript": "~4.8.3",
		"vite": "^3.1.0"
	},
	"engines": {
		"node": "16",
		"npm": "8"
	},
	"type": "module",
	"dependencies": {
		"@urql/exchange-graphcache": "^5.0.1",
		"@urql/svelte": "^3.0.1",
		"cookie": "^0.5.0",
		"dayjs": "^1.11.5",
		"graphql": "^16.6.0",
		"query-string": "^7.1.1",
		"sanitize.css": "^13.0.0",
		"slugify": "^1.6.5"
	}
}
