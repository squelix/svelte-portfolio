		"eslint-plugin-svelte": "^2.32.2",
		"jest": "^29.6.1",
		"jest-environment-jsdom": "^29.6.1",
		"jest-transform-stub": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.25",
		"postcss-html": "^1.5.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^2.10.1",
		"release-it": "^16.1.0",
		"saas": "^1.0.0",
		"sass": "^1.63.6",
		"stylelint": "^15.10.1",
		"stylelint-config-standard-scss": "^10.0.0",
		"stylelint-scss": "^5.0.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.6",
		"svelte-jester": "^2.3.2",
		"svelte-preprocess": "^5.0.3",
		"sveltekit-i18n": "^2.3.2",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.3"
	},
	"dependencies": {
