		"prettier-plugin-svelte": "^2.8.0",
		"release-it": "^15.5.0",
		"sass": "^1.56.1",
		"stylelint": "^14.14.1",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-recommended-scss": "^7.0.0",
		"stylelint-config-standard": "^28.0.0",
		"stylelint-scss": "^4.3.0",
		"svelte": "^3.52.0",
		"svelte-check": "^2.9.2",
		"svelte-jester": "^2.3.2",
		"svelte-preprocess": "^4.10.7",
		"sveltekit-i18n": "^2.2.2",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "~4.8.4",
		"vite": "^3.2.3"
	},
	"dependencies": {
