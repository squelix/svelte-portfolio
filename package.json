		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.39.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-transform-stub": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.38",
		"postcss-html": "^1.7.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"release-it": "^17.3.0",
		"saas": "^1.0.0",
		"sass": "^1.77.4",
		"stylelint": "^16.6.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-scss": "^6.3.0",
		"svelte": "^4.2.17",
		"svelte-check": "^3.8.0",
		"svelte-jester": "^3.0.0",
		"svelte-preprocess": "^5.1.4",
		"sveltekit-i18n": "^2.4.2",
		"ts-jest": "^29.1.4",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
